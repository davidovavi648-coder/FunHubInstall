#!/bin/bash

echo "======================================"
echo "  FunHub V1 Executor - Installing"
echo "======================================"
echo ""

# Check Node.js
if ! command -v node &> /dev/null; then
    echo "âŒ Node.js not found. Installing..."
    if [[ "$OSTYPE" == "linux-gnu"* ]]; then
        curl -fsSL https://deb.nodesource.com/setup_18.x | sudo -E bash -
        sudo apt-get install -y nodejs
    elif [[ "$OSTYPE" == "darwin"* ]]; then
        brew install node
    fi
fi

# Create app directory
cd ~
rm -rf FunHub-V1
mkdir -p FunHub-V1
cd FunHub-V1

echo "ðŸ“¦ Setting up Electron app..."

# Create package.json
cat > package.json << 'EOF'
{
  "name": "funhub-v1-executor",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "devDependencies": {
    "electron": "^28.0.0"
  },
  "dependencies": {
    "ws": "^8.14.2"
  }
}
EOF

# Install dependencies
echo "â¬‡ï¸  Installing dependencies..."
npm install --silent

# Create main.js
cat > main.js << 'EOF'
const { app, BrowserWindow } = require('electron');
const WebSocket = require('ws');

let mainWindow;
let wss;

function createWindow() {
    mainWindow = new BrowserWindow({
        width: 1200,
        height: 800,
        backgroundColor: '#0a0e1a',
        webPreferences: {
            nodeIntegration: true,
            contextIsolation: false
        }
    });

    mainWindow.loadFile('index.html');
    
    // Start WebSocket server
    wss = new WebSocket.Server({ port: 8080 });
    let robloxConn = null;
    
    wss.on('connection', (ws, req) => {
        const agent = req.headers['user-agent'] || '';
        
        if (agent === 'roblox-executor') {
            console.log('âœ… Roblox connected');
            robloxConn = ws;
            
            mainWindow.webContents.executeJavaScript(`
                document.querySelector('.status-dot').style.background = '#4ade80';
                document.querySelector('.connection-status span').textContent = 'Connected';
            `);
            
            ws.on('close', () => {
                console.log('âŒ Roblox disconnected');
                robloxConn = null;
                mainWindow.webContents.executeJavaScript(`
                    document.querySelector('.status-dot').style.background = '#f87171';
                    document.querySelector('.connection-status span').textContent = 'Disconnected';
                `);
            });
        } else {
            ws.send(JSON.stringify({ type: 'status', connected: robloxConn !== null }));
            
            ws.on('message', (data) => {
                const msg = JSON.parse(data);
                if (msg.type === 'execute' && robloxConn) {
                    robloxConn.send(JSON.stringify({ type: 'execute', script: msg.script }));
                }
            });
        }
    });
}

app.whenReady().then(createWindow);

app.on('window-all-closed', () => {
    if (wss) wss.close();
    app.quit();
});
EOF

